generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Address {
  id         Int      @id @default(autoincrement())
  cep        String
  street     String
  district   String
  number     String
  city       String
  is_main    Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime
  user_id    Int
  User       User     @relation(fields: [user_id], references: [id])
}

model Cart {
  order_id    Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  updated_at  DateTime
  user_id     Int
  schedule_id Int
  Schedule    Schedule @relation(fields: [schedule_id], references: [id])
  User        User     @relation(fields: [user_id], references: [id])
}

model Schedule {
  id             Int      @id @default(autoincrement())
  scheduled_date DateTime @unique
  created_at     DateTime @default(now())
  updated_at     DateTime
  user_id        Int
  Cart           Cart[]
  User           User     @relation(fields: [user_id], references: [id])
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  age        String
  email      String
  phone      String
  password   String
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  Address    Address[]
  Cart       Cart[]
  Schedule   Schedule[]
}
